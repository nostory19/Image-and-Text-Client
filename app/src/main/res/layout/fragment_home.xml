<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 顶部Tab栏 -->
    <LinearLayout
        android:id="@+id/top_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">
        <ImageView
            android:icon="@drawable/ic_sidebar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_sidebar"
            app:tint="#000000" />

        <TextView
            android:id="@+id/tab_beijing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="北京"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_tuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="团购"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_follow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="关注"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_community"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="社区"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tab_recommend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="推荐"
            android:textColor="#CCCCCC"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_search_menu"
            android:tint="#000000" />
    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <!-- 添加SwipeRefreshLayout用于下拉刷新，并设置正确的布局参数 -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!-- 瀑布流RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/waterfall_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            tools:listitem="@layout/item_post_card" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    
    <!-- 空态页面，初始隐藏 -->
    <RelativeLayout
        android:id="@+id/empty_state_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:visibility="gone"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无内容"
                android:textSize="16sp"
                android:textColor="#999999"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/empty_state_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新试试"
                android:textSize="14sp"
                android:textColor="#BBBBBB" />

            <Button
                android:id="@+id/retry_button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="重新加载"
                android:layout_marginTop="16dp"
                android:background="#FF0000"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 全局Loading提示，初始隐藏 -->
    <RelativeLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:gravity="center">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>
    </RelativeLayout>
    
    <!-- 移除重复的RecyclerView -->
</LinearLayout>